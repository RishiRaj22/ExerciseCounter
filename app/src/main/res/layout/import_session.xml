<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.itsrishi.exercisecounter.ImportSessionActivity">
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/session_import_intro"
        android:gravity="center_horizontal"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="Add the following sessions" />

    <android.support.v7.widget.RecyclerView
        android:padding="5dp"
        android:id="@+id/new_sesions_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="visible"
        android:layout_below="@id/session_import_intro"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"></android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/session_tick_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_check_white_24dp"
        app:borderWidth="0dp"
        app:elevation="4sp"
        app:rippleColor="#FFFFFF" />
</RelativeLayout>
